@page
@model TrainerSchedule.Pages.Meets.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Meet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Meet.ClientID" class="control-label"></label>
                <select asp-for="Meet.ClientID" class ="form-control" asp-items="ViewBag.ClientID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Meet.TrainerID" class="control-label"></label>
                <select asp-for="Meet.TrainerID" class ="form-control" asp-items="ViewBag.TrainerID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Meet.DateAndTime" class="control-label"></label>
                <input asp-for="Meet.DateAndTime" class="form-control" />
                <span asp-validation-for="Meet.DateAndTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Meet.Notes" class="control-label"></label>
                <input asp-for="Meet.Notes" class="form-control" />
                <span asp-validation-for="Meet.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
